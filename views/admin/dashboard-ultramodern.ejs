          <h1 class="page-title">Admin Dashboard</h1>
          <div class="header-actions">
            <div class="date-display">
              <i class="far fa-calendar-alt me-2"></i>
              <span
                ><%= new Date().toLocaleDateString('en-US', { weekday: 'long',
                year: 'numeric', month: 'long', day: 'numeric' }) %></span
              >
            </div>
            <a href="/admin/logout" class="btn-modern btn-secondary">
              <i class="fas fa-sign-out-alt"></i>
              <span>Logout</span>
            </a>
          </div>
        </header>

        <!-- Flash Messages -->
        <% if (messages.error) { %>
        <div class="alert-modern alert-modern-danger" data-aos="fade-up">
          <div class="alert-icon">
            <i class="fas fa-exclamation-circle"></i>
          </div>
          <div class="alert-content">
            <p><%= messages.error %></p>
          </div>
        </div>
        <% } %> <% if (messages.success) { %>
        <div class="alert-modern alert-modern-success" data-aos="fade-up">
          <div class="alert-icon">
            <i class="fas fa-check-circle"></i>
          </div>
          <div class="alert-content">
            <p><%= messages.success %></p>
          </div>
        </div>
        <% } %>

        <!-- Stats Grid -->
        <div class="stats-grid">
          <div class="stat-card" data-aos="fade-up" data-aos-delay="100">
            <div class="stat-icon stat-icon-1">
              <i class="fas fa-sitemap"></i>
            </div>
            <h3 class="stat-value"><%= stats.positionCount %></h3>
            <p class="stat-label">Positions</p>
            <div class="stat-change positive">
              <i class="fas fa-arrow-up me-1"></i>
              <span>Active</span>
            </div>
          </div>

          <div class="stat-card" data-aos="fade-up" data-aos-delay="200">
            <div class="stat-icon stat-icon-2">
              <i class="fas fa-users"></i>
            </div>
            <h3 class="stat-value"><%= stats.contestantCount %></h3>
            <p class="stat-label">Contestants</p>
          </div>

          <div class="stat-card" data-aos="fade-up" data-aos-delay="300">
            <div class="stat-icon stat-icon-3">
              <i class="fas fa-user-check"></i>
            </div>
            <h3 class="stat-value"><%= stats.voterCount %></h3>
            <p class="stat-label">Registered Voters</p>
          </div>

          <div class="stat-card" data-aos="fade-up" data-aos-delay="400">
            <div class="stat-icon stat-icon-4">
              <i class="fas fa-vote-yea"></i>
            </div>
            <h3 class="stat-value"><%= stats.votingRate %>%</h3>
            <p class="stat-label">Voting Rate</p>
          </div>
        </div>

        <!-- System Status -->
        <div class="system-status">
          <div class="status-card" data-aos="fade-up" data-aos-delay="100">
            <div class="status-card-header">
              <h3>Voting Status</h3>
            </div>
            <div class="status-card-body">
              <% if (settings.votingEnabled) { %>
              <div class="status-indicator enabled">
                <i class="fas fa-check-circle"></i>
                <span>Voting is Enabled</span>
              </div>
              <% } else { %>
              <div class="status-indicator disabled">
                <i class="fas fa-times-circle"></i>
                <span>Voting is Disabled</span>
              </div>
              <% } %>

              <div class="status-details">
                <% if (settings.votingStartDate) { %>
                <span>
                  <i class="far fa-calendar"></i>
                  Start: <%= new
                  Date(settings.votingStartDate).toLocaleDateString() %>
                </span>
                <% } %> <% if (settings.votingEndDate) { %>
                <span>
                  <i class="far fa-calendar"></i>
                  End: <%= new Date(settings.votingEndDate).toLocaleDateString()
                  %>
                </span>
                <% } %>
              </div>

              <a href="/admin/settings" class="btn-modern btn-primary">
                <i class="fas fa-cog"></i>
                <span>Settings</span>
              </a>
            </div>
          </div>

          <div class="status-card" data-aos="fade-up" data-aos-delay="200">
            <div class="status-card-header">
              <h3>Registration Status</h3>
            </div>
            <div class="status-card-body">
              <% if (settings.registrationEnabled) { %>
              <div class="status-indicator enabled">
                <i class="fas fa-check-circle"></i>
                <span>Registration is Open</span>
              </div>
              <% } else { %>
              <div class="status-indicator disabled">
                <i class="fas fa-times-circle"></i>
                <span>Registration is Closed</span>
              </div>
              <% } %>

              <div class="status-details">
                <% if (settings.displayResults) { %>
                <span>
                  <i class="fas fa-eye"></i>
                  Results are visible to voters
                </span>
                <% } else { %>
                <span>
                  <i class="fas fa-eye-slash"></i>
                  Results are hidden from voters
                </span>
                <% } %>
              </div>

              <a href="/admin/voters" class="btn-modern btn-primary">
                <i class="fas fa-users"></i>
                <span>Manage Voters</span>
              </a>
            </div>
          </div>
        </div>

        <!-- Results Card -->
        <div class="results-card" data-aos="fade-up" data-aos-delay="100">
          <div class="results-card-header">
            <h3>Election Results Preview</h3>
            <a href="/admin/results" class="btn-modern btn-primary btn-sm">
              <i class="fas fa-chart-bar"></i>
              <span>View Full Results</span>
            </a>
          </div>
          <div class="results-card-body">
            <% if (positions && positions.length > 0) { %>
            <div class="table-responsive">
              <table class="results-table">
                <thead>
                  <tr>
                    <th>Position</th>
                    <th>Status</th>
                    <th>Leading Candidate</th>
                    <th>Votes</th>
                    <th>Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% positions.forEach(position => { %>
                  <tr>
                    <td>
                      <strong><%= position.title %></strong>
                    </td>
                    <td>
                      <% if (position.isActive) { %>
                      <span class="status-badge badge-success">Active</span>
                      <% } else { %>
                      <span class="status-badge badge-danger">Inactive</span>
                      <% } %> <% if (position.displayResults) { %>
                      <span class="status-badge badge-info"
                        >Results Visible</span
                      >
                      <% } %>
                    </td>
                    <td>
                      <% if (position.contestants && position.contestants.length
                      > 0) { %>
                      <div class="d-flex align-items-center">
                        <div class="avatar me-2">
                          <img
                            src="/uploads/<%= position.contestants[0].photo %>"
                            alt="<%= position.contestants[0].name %>"
                          />
                        </div>
                        <span><%= position.contestants[0].name %></span>
                      </div>
                      <% } else { %>
                      <em>No contestants</em>
                      <% } %>
                    </td>
                    <td>
                      <% if (position.contestants && position.contestants.length
                      > 0) { %> <%= position.contestants[0].votes || 0 %> <% }
                      else { %> 0 <% } %>
                    </td>
                    <td>
                      <div class="d-flex gap-2">
                        <a
                          href="/admin/positions"
                          class="btn-modern btn-secondary btn-icon"
                        >
                          <i class="fas fa-cog"></i>
                        </a>
                        <a
                          href="/admin/contestants"
                          class="btn-modern btn-secondary btn-icon"
                        >
                          <i class="fas fa-users"></i>
                        </a>
                      </div>
                    </td>
                  </tr>
                  <% }); %>
                </tbody>
              </table>
            </div>
            <% } else { %>
            <div class="alert-modern alert-modern-info">
              <div class="alert-icon">
                <i class="fas fa-info-circle"></i>
              </div>
              <div class="alert-content">
                <p>No positions have been set up yet.</p>
                <a href="/admin/positions" class="btn-modern btn-primary mt-3">
                  Create Positions
                </a>
              </div>
            </div>
            <% } %>
          </div>
        </div>
      </main>
    </div>

    <!-- Bootstrap JS Bundle -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Chart.js -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <!-- AOS Animation -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

    <!-- Dashboard JavaScript -->
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        // Initialize AOS animations
        AOS.init({
          duration: 800,
          once: true,
          offset: 50,
        });

        // Loading screen
        const loadingContainer = document.getElementById("loadingContainer");
        loadingContainer.classList.add("show");

        // Hide loading screen after a short delay
        setTimeout(() => {
          loadingContainer.classList.remove("show");
        }, 800);

        // Sidebar toggle functionality
        const sidebar = document.getElementById("sidebar");
        const sidebarToggle = document.getElementById("sidebarToggle");
        const mobileSidebarToggle = document.getElementById(
          "mobileSidebarToggle"
        );
        const mobileOverlay = document.getElementById("mobileOverlay");

        sidebarToggle.addEventListener("click", () => {
          sidebar.classList.toggle("collapsed");
        });

        mobileSidebarToggle.addEventListener("click", () => {
          sidebar.classList.toggle("show");
          mobileOverlay.classList.toggle("show");
        });

        mobileOverlay.addEventListener("click", () => {
          sidebar.classList.remove("show");
          mobileOverlay.classList.remove("show");
        });

        // Counter animation for stat values
        function animateCounters() {
          const counters = document.querySelectorAll(".stat-value");

          counters.forEach((counter) => {
            const value = parseInt(counter.innerText);
            let currentCount = 0;
            const increment = value / 25; // Adjust for animation speed

            const updateCount = () => {
              if (currentCount < value) {
                currentCount += increment;
                counter.innerText = Math.ceil(currentCount);
                setTimeout(updateCount, 20);
              } else {
                counter.innerText = value;
              }
            };

            updateCount();
          });
        }

        // Call counter animation after page load
        setTimeout(animateCounters, 1000);

        // Responsive behavior
        function handleResponsiveLayout() {
          if (window.innerWidth < 992) {
            sidebar.classList.remove("collapsed");
          }
        }

        window.addEventListener("resize", handleResponsiveLayout);
        handleResponsiveLayout();
      });
    </script>
  </body>
</html>
