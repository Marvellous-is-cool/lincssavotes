<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= title %> | LINCSSA VOTES Admin</title>
    <!-- Bootstrap 5 CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <!-- Font Awesome Icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <!-- Google Fonts -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"
      rel="stylesheet"
    />
    <!-- Chart.js -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/chart.js@4.4.0/dist/chart.min.css"
    />
    <!-- AOS Animation -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
    <!-- DataTables -->
    <link
      rel="stylesheet"
      href="https://cdn.datatables.net/1.13.6/css/dataTables.bootstrap5.min.css"
    />
    <!-- SweetAlert2 -->
    <link
      href="https://cdn.jsdelivr.net/npm/sweetalert2@11.7.32/dist/sweetalert2.min.css"
      rel="stylesheet"
    />
    <!-- Flatpickr for date picker -->
    <link
      rel="stylesheet"
      href="https://cdn.jsdelivr.net/npm/flatpickr/dist/flatpickr.min.css"
    />
    <!-- Custom Styles -->
    <link rel="stylesheet" href="/styles/admin-ultramodern.css" />
  </head>
  <body>
    <!-- Background Effects -->
    <div class="bg-pattern"></div>
    <div class="bg-gradient"></div>

    <!-- Loading Screen -->
    <div class="loading-container" id="loadingContainer">
      <div class="loading-spinner"></div>
    </div>

    <!-- Mobile Menu Overlay -->
    <div class="mobile-overlay" id="mobileOverlay"></div>

    <!-- Layout Wrapper -->
    <div class="layout-wrapper">
      <!-- Sidebar -->
      <aside class="sidebar" id="sidebar">
        <div class="sidebar-logo">
          <h1>LINCSSA <span>VOTES</span></h1>
          <button class="sidebar-toggle" id="sidebarToggle">
            <i class="fas fa-bars"></i>
          </button>
        </div>

        <div class="sidebar-admin-info">
          <span class="admin-badge">Administrator</span>
        </div>

        <ul class="sidebar-menu">
          <li class="menu-item <%= active === 'dashboard' ? 'active' : '' %>">
            <a href="/admin/dashboard">
              <i class="fas fa-tachometer-alt"></i>
              <span>Dashboard</span>
            </a>
          </li>
          <li class="menu-item <%= active === 'settings' ? 'active' : '' %>">
            <a href="/admin/settings">
              <i class="fas fa-cogs"></i>
              <span>Settings</span>
            </a>
          </li>
          <li class="menu-item <%= active === 'positions' ? 'active' : '' %>">
            <a href="/admin/positions">
              <i class="fas fa-sitemap"></i>
              <span>Positions</span>
            </a>
          </li>
          <li class="menu-item <%= active === 'contestants' ? 'active' : '' %>">
            <a href="/admin/contestants">
              <i class="fas fa-users"></i>
              <span>Contestants</span>
            </a>
          </li>
          <li class="menu-item <%= active === 'voters' ? 'active' : '' %>">
            <a href="/admin/voters">
              <i class="fas fa-user-check"></i>
              <span>Voters</span>
            </a>
          </li>
          <li class="menu-item <%= active === 'results' ? 'active' : '' %>">
            <a href="/admin/results">
              <i class="fas fa-chart-bar"></i>
              <span>Results</span>
            </a>
          </li>
          <li class="menu-item">
            <a href="/admin/logout">
              <i class="fas fa-sign-out-alt"></i>
              <span>Logout</span>
            </a>
          </li>
        </ul>
      </aside>

      <!-- Main Content -->
      <main class="main-content">
        <!-- Mobile Header (visible on mobile only) -->
        <div class="mobile-header d-flex d-lg-none">
          <button class="sidebar-toggle" id="mobileSidebarToggle">
            <i class="fas fa-bars"></i>
          </button>
          <h1 class="page-title m-0"><%= pageTitle %></h1>
        </div>

        <!-- Main Header -->
        <header class="main-header d-none d-lg-flex">
          <h1 class="page-title"><%= pageTitle %></h1>
          <div class="header-actions">
            <div class="date-display">
              <i class="far fa-calendar-alt me-2"></i>
              <span
                ><%= new Date().toLocaleDateString('en-US', { weekday: 'long',
                year: 'numeric', month: 'long', day: 'numeric' }) %></span
              >
            </div>
            <a href="/admin/logout" class="btn-modern btn-secondary">
              <i class="fas fa-sign-out-alt"></i>
              <span>Logout</span>
            </a>
          </div>
        </header>

        <!-- Flash Messages -->
        <% if (messages && messages.error) { %>
        <div class="alert-modern alert-modern-danger" data-aos="fade-up">
          <div class="alert-icon">
            <i class="fas fa-exclamation-circle"></i>
          </div>
          <div class="alert-content">
            <p><%= messages.error %></p>
          </div>
        </div>
        <% } %> <% if (messages && messages.success) { %>
        <div class="alert-modern alert-modern-success" data-aos="fade-up">
          <div class="alert-icon">
            <i class="fas fa-check-circle"></i>
          </div>
          <div class="alert-content">
            <p><%= messages.success %></p>
          </div>
        </div>
        <% } %>

        <!-- Page content starts here -->
      </main>
    </div>
  </body>
</html>
