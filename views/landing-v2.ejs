<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>LINCSSA VOTES - Modern Election Platform</title>
    <!-- Font Awesome for icons -->
    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.2/css/all.min.css"
    />
    <!-- Google Fonts: Inter, Outfit and JetBrains Mono -->
    <link
      href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&family=Outfit:wght@300;400;500;600;700;800&family=JetBrains+Mono:wght@400;500;600&display=swap"
      rel="stylesheet"
    />
    <!-- Modern UI stylesheet v2 -->
    <link rel="stylesheet" href="/styles/modern-v2.css" />
    <!-- Ultra-modern countdown timer styles -->
    <link rel="stylesheet" href="/styles/countdown-modern.css" />
    <!-- AOS Animation library -->
    <link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />
  </head>
  <body>
    <!-- Subtle gradient background with particles effect -->
    <div class="particles"></div>

    <!-- Header -->
    <header class="site-header">
      <div class="container">
        <nav class="navbar">
          <div class="logo">
            <a href="/">
              <img src="/images/logo.png" alt="LINCSSA VOTES Logo" />
              <h2 data-text="LINCSSA">LINCSSA <span>VOTES</span></h2>
            </a>
          </div>

          <ul class="nav-links">
            <li class="active"><a href="/">Home</a></li>
            <% if (settings.displayResults) { %>
            <li><a href="/results">Results</a></li>
            <% } %> <% if (!voter) { %>
            <li><a href="/register">Register</a></li>
            <li>
              <a href="/login" class="btn btn-primary btn-sm btn-rounded">
                <i class="fas fa-sign-in-alt me-2"></i> Login
              </a>
            </li>
            <% } else { %>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/profile">Profile</a></li>
            <li>
              <a href="/logout" class="btn btn-outline btn-sm btn-rounded">
                <i class="fas fa-sign-out-alt me-2"></i> Logout
              </a>
            </li>
            <% } %>
          </ul>

          <div class="hamburger">
            <span></span>
            <span></span>
            <span></span>
          </div>

          <button class="dark-mode-toggle" aria-label="Toggle dark mode">
            <i class="fas fa-moon"></i>
            <i class="fas fa-sun"></i>
          </button>
        </nav>
      </div>
    </header>

    <!-- Hero Section -->
    <section class="hero">
      <div class="container">
        <div class="hero-content">
          <h1 data-aos="fade-up" data-aos-duration="800">LINCSSA VOTES</h1>
          <p data-aos="fade-up" data-aos-delay="200" data-aos-duration="800">
            Osun State University, Ikire Campus Departmental Election
          </p>

          <!-- Countdown Timer if voting is scheduled -->
          <% if (settings.votingStartDate && settings.votingEndDate) { %>
          <div
            class="countdown-container"
            data-aos="fade-up"
            data-aos-delay="400"
            data-aos-duration="800"
          >
            <div class="countdown-header">
              <h4 class="countdown-title">
                <% if (settings.votingEnabled) { %>
                <i class="fas fa-clock"></i> Voting Ends In: <% } else { %>
                <i class="fas fa-clock"></i> Voting Starts In: <% } %>
              </h4>
            </div>
            <div
              class="countdown-timer"
              data-end-date="<%= settings.votingEnabled ? 
                (settings.votingEndDate instanceof Date ? settings.votingEndDate.toISOString() : settings.votingEndDate) : 
                (settings.votingStartDate instanceof Date ? settings.votingStartDate.toISOString() : settings.votingStartDate) %>"
            >
              <div class="loading">
                <div class="loading-circle"></div>
                <div class="loading-circle"></div>
                <div class="loading-circle"></div>
              </div>
            </div>
            <% if (voter) { %>
            <div class="voter-status">
              <div class="voter-badge">
                <i class="fas fa-user-check"></i> Logged in as <%=
                voter.fullName || voter.matricNumber %>
              </div>
            </div>
            <% } %>
          </div>
          <% } %>

          <div class="hero-buttons" data-aos="fade-up" data-aos-delay="600">
            <% if (!voter) { %> <% if (settings.registrationEnabled) { %>
            <a href="/register" class="btn btn-primary btn-lg btn-rounded">
              <i class="fas fa-user-plus me-2"></i> Register to Vote
            </a>
            <% } %>
            <a href="/login" class="btn btn-outline btn-lg btn-rounded">
              <i class="fas fa-sign-in-alt me-2"></i> Login
            </a>
            <% } else { %>
            <a href="/dashboard" class="btn btn-primary btn-lg btn-rounded">
              <i class="fas fa-tachometer-alt me-2"></i> Go to Dashboard
            </a>
            <a href="/profile" class="btn btn-outline btn-lg btn-rounded">
              <i class="fas fa-user me-2"></i> View Profile
            </a>
            <% } %>
          </div>
        </div>
      </div>
    </section>

    <!-- Features Section -->
    <section class="py-5">
      <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
          <h2>Election Platform Features</h2>
          <p>
            Discover what makes LINCSSA VOTES the ideal choice for student union
            elections
          </p>
        </div>

        <div class="row">
          <!-- Feature 1 -->
          <div class="col" data-aos="fade-up" data-aos-delay="100">
            <div class="card h-100">
              <div class="card-body text-center">
                <div class="mb-4">
                  <i class="fas fa-shield-alt fa-3x text-primary"></i>
                </div>
                <h3>Secure Voting</h3>
                <p>
                  Advanced security measures ensure that your vote is counted
                  accurately and kept private
                </p>
              </div>
            </div>
          </div>

          <!-- Feature 2 -->
          <div class="col" data-aos="fade-up" data-aos-delay="200">
            <div class="card h-100">
              <div class="card-body text-center">
                <div class="mb-4">
                  <i class="fas fa-mobile-alt fa-3x text-primary"></i>
                </div>
                <h3>Mobile Friendly</h3>
                <p>
                  Vote from anywhere using your smartphone, tablet, or computer
                </p>
              </div>
            </div>
          </div>

          <!-- Feature 3 -->
          <div class="col" data-aos="fade-up" data-aos-delay="300">
            <div class="card h-100">
              <div class="card-body text-center">
                <div class="mb-4">
                  <i class="fas fa-chart-pie fa-3x text-primary"></i>
                </div>
                <h3>Real-time Results</h3>
                <p>
                  Watch the election unfold with live vote counting and detailed
                  analytics
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- How to Vote Section -->
    <section class="py-5 bg-light">
      <div class="container">
        <div class="text-center mb-5" data-aos="fade-up">
          <h2>How to Vote</h2>
          <p>Follow these simple steps to cast your vote</p>
        </div>

        <div class="row">
          <!-- Step 1 -->
          <div class="col" data-aos="fade-up" data-aos-delay="100">
            <div class="card h-100">
              <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                  <div class="me-3">
                    <div
                      class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                      style="width: 40px; height: 40px"
                    >
                      <strong>1</strong>
                    </div>
                  </div>
                  <h3 class="mb-0">Register</h3>
                </div>
                <p>
                  Create an account using your valid student matric number and
                  set a password
                </p>
              </div>
            </div>
          </div>

          <!-- Step 2 -->
          <div class="col" data-aos="fade-up" data-aos-delay="200">
            <div class="card h-100">
              <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                  <div class="me-3">
                    <div
                      class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                      style="width: 40px; height: 40px"
                    >
                      <strong>2</strong>
                    </div>
                  </div>
                  <h3 class="mb-0">Login</h3>
                </div>
                <p>Access your account securely using your credentials</p>
              </div>
            </div>
          </div>

          <!-- Step 3 -->
          <div class="col" data-aos="fade-up" data-aos-delay="300">
            <div class="card h-100">
              <div class="card-body">
                <div class="d-flex align-items-center mb-3">
                  <div class="me-3">
                    <div
                      class="bg-primary text-white rounded-circle d-flex align-items-center justify-content-center"
                      style="width: 40px; height: 40px"
                    >
                      <strong>3</strong>
                    </div>
                  </div>
                  <h3 class="mb-0">Vote</h3>
                </div>
                <p>
                  Review candidates and make your selection for each position
                </p>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Status Section -->
    <section class="py-5">
      <div class="container">
        <div class="card">
          <div class="card-body">
            <div class="row align-items-center">
              <div class="col text-center text-md-start">
                <h2 class="mb-3">Election Status</h2>

                <div class="d-flex flex-column flex-md-row mb-3">
                  <div class="me-md-4 mb-3 mb-md-0">
                    <h4>
                      <% if (settings.votingEnabled) { %>
                      <span class="text-success">
                        <i class="fas fa-check-circle me-2"></i> Voting is Open
                      </span>
                      <% } else { %>
                      <span class="text-muted">
                        <i class="fas fa-clock me-2"></i> Voting is Not Yet Open
                      </span>
                      <% } %>
                    </h4>
                  </div>

                  <div>
                    <h4>
                      <% if (settings.registrationEnabled) { %>
                      <span class="text-success">
                        <i class="fas fa-check-circle me-2"></i> Registration is
                        Open
                      </span>
                      <% } else { %>
                      <span class="text-muted">
                        <i class="fas fa-times-circle me-2"></i> Registration is
                        Closed
                      </span>
                      <% } %>
                    </h4>
                  </div>
                </div>

                <% if (settings.votingStartDate && settings.votingEndDate) { %>
                <p class="mb-4">
                  <strong>Election Period:</strong>
                  <%= new
                  Date(settings.votingStartDate).toLocaleDateString('en-US', {
                  weekday: 'long', month: 'long', day: 'numeric', year:
                  'numeric' }) %> to <%= new
                  Date(settings.votingEndDate).toLocaleDateString('en-US', {
                  weekday: 'long', month: 'long', day: 'numeric', year:
                  'numeric' }) %>
                </p>
                <% } %>

                <div
                  class="d-flex flex-wrap justify-content-center justify-content-md-start gap-2"
                >
                  <% if (settings.votingEnabled) { %>
                  <a href="/login" class="btn btn-primary btn-rounded">
                    <i class="fas fa-vote-yea me-2"></i> Cast Your Vote
                  </a>
                  <% } %> <% if (settings.displayResults) { %>
                  <a href="/results" class="btn btn-outline btn-rounded">
                    <i class="fas fa-chart-column me-2"></i> View Results
                  </a>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Voting End Information Section -->
    <section class="py-5">
      <div class="container">
        <div class="text-center mb-4" data-aos="fade-up">
          <h2>Election Information</h2>
          <p>Important dates and details about the LINCSSA election</p>
        </div>

        <div class="row">
          <div class="col-md-6 mb-4" data-aos="fade-up" data-aos-delay="100">
            <div class="card h-100">
              <div class="card-body">
                <h3>
                  <i class="fas fa-calendar-alt text-primary me-2"></i>
                  Important Dates
                </h3>
                <ul class="list-unstyled mt-3">
                  <li class="mb-3">
                    <strong>Registration Opens:</strong>
                    <% if (settings.registrationStartDate) { %> <%= new
                    Date(settings.registrationStartDate).toLocaleDateString('en-US',
                    { year: 'numeric', month: 'long', day: 'numeric' }) %> <% }
                    else { %> Available Now <% } %>
                  </li>
                  <li class="mb-3">
                    <strong>Voting Starts:</strong>
                    <% if (settings.votingStartDate) { %> <%= new
                    Date(settings.votingStartDate).toLocaleDateString('en-US', {
                    year: 'numeric', month: 'long', day: 'numeric' }) %> <% }
                    else { %> To Be Announced <% } %>
                  </li>
                  <li class="mb-3">
                    <strong>Voting Ends:</strong>
                    <% if (settings.votingEndDate) { %> <%= new
                    Date(settings.votingEndDate).toLocaleDateString('en-US', {
                    year: 'numeric', month: 'long', day: 'numeric', hour:
                    '2-digit', minute: '2-digit' }) %> <% } else { %> To Be
                    Announced <% } %>
                  </li>
                  <li>
                    <strong>Results Announcement:</strong>
                    <% if (settings.votingEndDate) { %> <%= new Date(new
                    Date(settings.votingEndDate).getTime() +
                    24*60*60*1000).toLocaleDateString('en-US', { year:
                    'numeric', month: 'long', day: 'numeric' }) %> <% } else {
                    %> After Voting Closes <% } %>
                  </li>
                </ul>
              </div>
            </div>
          </div>

          <div class="col-md-6 mb-4" data-aos="fade-up" data-aos-delay="200">
            <div class="card h-100">
              <div class="card-body">
                <h3>
                  <i class="fas fa-info-circle text-primary me-2"></i> Election
                  Status
                </h3>
                <div class="mt-3">
                  <% if (settings.votingEnabled) { %>
                  <div class="alert alert-success">
                    <i class="fas fa-check-circle me-2"></i> Voting is currently
                    open! <% if (voter) { %>
                    <div class="mt-2 p-2 border-top">
                      <h5 class="mt-2">
                        <i class="fas fa-user me-2"></i> Your Status
                      </h5>
                      <p class="mb-1">
                        <strong>Logged in as:</strong> <%= voter.fullName %>
                      </p>
                      <p class="mb-1">
                        <strong>Matric Number:</strong> <%= voter.matricNumber
                        %>
                      </p>
                      <p class="mb-1">
                        <strong>Department:</strong> <%= voter.department %>
                      </p>

                      <% if (voter.votedPositions && voter.votedPositions.length
                      > 0) { %>
                      <div class="mt-2 text-success">
                        <i class="fas fa-vote-yea me-2"></i>
                        You've voted for <%= voter.votedPositions.length %>
                        position(s).
                        <a
                          href="/profile"
                          class="btn btn-sm btn-outline-primary mt-2"
                          >View Details</a
                        >
                      </div>
                      <% } else { %>
                      <div class="mt-2 text-warning">
                        <i class="fas fa-exclamation-circle me-2"></i>
                        You haven't voted yet.
                        <a href="/dashboard" class="btn btn-sm btn-primary mt-2"
                          >Cast Your Vote</a
                        >
                      </div>
                      <% } %>
                    </div>
                    <% } else { %>
                    <p class="mt-2 mb-0">
                      Please login or register to cast your vote.
                    </p>
                    <% } %>
                  </div>
                  <% } else if (settings.votingStartDate && new
                  Date(settings.votingStartDate) > new Date()) { %>
                  <div class="alert alert-info">
                    <i class="fas fa-clock me-2"></i> Voting will open soon.
                    <p class="mt-2 mb-0">
                      Get ready to cast your vote for the LINCSSA leadership
                      positions!
                    </p>
                  </div>
                  <% } else if (settings.votingEndDate && new
                  Date(settings.votingEndDate) < new Date()) { %>
                  <div class="alert alert-warning">
                    <i class="fas fa-flag-checkered me-2"></i> Voting has ended.
                    <p class="mt-2 mb-0">
                      Thank you for participating. Results will be announced
                      soon.
                    </p>
                  </div>
                  <% } else { %>
                  <div class="alert alert-secondary">
                    <i class="fas fa-info-circle me-2"></i> Election details are
                    being finalized.
                    <p class="mt-2 mb-0">
                      Please check back later for updates on the election
                      schedule.
                    </p>
                  </div>
                  <% } %>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer -->
    <footer class="site-footer">
      <div class="container">
        <div class="footer-content">
          <div>
            <div class="footer-logo">
              <img src="/images/logo.png" alt="LINCSSA VOTES Logo" />
              <h3>LINCSSA <span>VOTES</span></h3>
            </div>
            <p class="mb-0">Modern Election Platform</p>
          </div>

          <ul class="footer-links">
            <li><a href="/">Home</a></li>
            <% if (settings.displayResults) { %>
            <li><a href="/results">Results</a></li>
            <% } %> <% if (!voter) { %>
            <li><a href="/register">Register</a></li>
            <li><a href="/login">Login</a></li>
            <% } else { %>
            <li><a href="/dashboard">Dashboard</a></li>
            <li><a href="/profile">Profile</a></li>
            <li><a href="/logout">Logout</a></li>
            <% } %>
          </ul>

          <div class="social-links">
            <a href="#" aria-label="Facebook"
              ><i class="fab fa-facebook-f"></i
            ></a>
            <a href="#" aria-label="Twitter"><i class="fab fa-twitter"></i></a>
            <a href="#" aria-label="Instagram"
              ><i class="fab fa-instagram"></i
            ></a>
          </div>
        </div>

        <div class="copyright text-center mt-4">
          <p class="mb-0">
            &copy; <%= new Date().getFullYear() %> Osun State University, Ikire
            Campus Student Union. All rights reserved.
          </p>
        </div>
      </div>
    </footer>

    <!-- JavaScript Libraries -->
    <script src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>
    <!-- Bootstrap bundle for toast notifications -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- Toast notification system -->
    <script src="/script/toast-notification.js"></script>
    <!-- Custom voting status handler - prevents recurring alerts -->
    <script src="/script/voting-status.js"></script>
    <script src="/script/modern-v2.js"></script>
    <script>
      // Initialize AOS animation library
      AOS.init({
        duration: 800,
        once: true,
      });
    </script>
  </body>
</html>
